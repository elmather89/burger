<div class="row border">

    <div class="col s6 main-div">
        <h2>Order a Burger!</h2>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li> #{{this.id}} - {{this.burger_name}} </li>
            <button class="change-state" data-id="{{id}}" data-newstate="{{devoured}}">
                {{#unless devoured}}DEVOUR THIS BURGER!
                {{/unless}}
            </button>
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="col s6 main-div">
        <h2>Devoured Burgers</h2>
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            <li> #{{this.id}} - {{this.burger_name}} </li>
            <button class="delete-burger" data-id="{{id}}">Delete</button>
            {{/if}}
            {{/each}}
        </ul>
    </div>

</div>