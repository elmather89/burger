<h2>Order a Burger!</h2>
<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li> #{{this.id}} - {{this.burger_name}} </li>
    <button class="change-state" data-id="{{id}}" data-newstate="{{devoured}}">
        {{#if devoured}}
        {{else}}DEVOUR THIS BURGER!
        {{/if}}
    </button>
    {{/unless}}
    {{/each}}
</ul>

<h2>Devoured Burgers</h2>
<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li> {{this.id}} * {{this.burger_name}} </li>
    {{/if}}
    {{/each}}
</ul>